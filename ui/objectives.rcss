/* Objectives HUD Base Styles */
* {
	box-sizing: border-box;
}

body {
	font-family: "Press Start 2P";
	font-size: 8px;
	color: #ffffff;
	width: 100%;
	height: 100vh;
	position: relative;
}

/* Objectives Container - Bottom Left Corner */
#objectives_container {
	position: absolute;
	bottom: 20px;
	left: 20px;
	width: 480px;
	background-color: rgb(20,20,20);
	border: 5px #AAAAAA;
	padding: 30px;
	display: block;
	opacity: 0;
	transform: translateY(50px);
	transition: transform 0.6s ease, opacity 0.6s ease;
	pointer-events: none;
}

#objectives_container.hud-visible {
	opacity: 1;
	transform: translateY(0);
	pointer-events: auto;
}

#objectives_container.hud-hidden {
	opacity: 0;
	transform: translateY(50px);
	pointer-events: none;
}

/* Objectives Title */
.objectives_title {
	display: block;
	font-size: 24px;
	color: #FFFFFF;
	margin-bottom: 16px;
	font-weight: bold;
}

/* Individual Objective Row */
.objective_row {
	display: block;
	width: 100%;
    margin-top: 15px;
}

.objective_row:last-child {
	margin-bottom: 0;
}

/* Status Icon (checkmark or cross) */
.status_icon {
	display: inline-block;
	width: 20px;
	height: 20px;
	position: relative;
	vertical-align: middle;
	text-align: center;
	line-height: 20px;
}


.checkmark_img {
	width: 20px;
	height: 20px;
	vertical-align: middle;
}

/* Red cross for incomplete objectives */
.cross_text {
	color: #FF503C;
	font-size: 20px;
	font-weight: bold;
	vertical-align: middle;
}

/* Objective Text */
.objective_text {
	display: inline-block;
	font-size: 18px;
	color: #FFFFFF;
	vertical-align: middle;
	margin-left: 8px;

}

